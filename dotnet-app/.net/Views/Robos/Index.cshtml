@model IEnumerable<MAIOCEAN.Models.Robo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusRobo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NmrSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusRobo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NmrSerie)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRobo">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdRobo">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdRobo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>