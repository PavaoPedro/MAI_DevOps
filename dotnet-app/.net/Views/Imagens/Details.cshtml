@model MAIOCEAN.Models.Imagem

@{
    ViewData["Title"] = "Details";
}

<h1>Imagem</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaminhoImagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaminhoImagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataHora)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataHora)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Profundidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Profundidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdImagem">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


@if (Model.Robo is null)
{
    <p>
        <a asp-controller="Robo" asp-action="Create" asp-route-id="@Model?.IdRobo">Cadastrar Robô</a>
    </p>
}
else
{
    <p>
        <a asp-controller="Robo" asp-action="Edit" asp-route-id="@Model?.IdRobo">Alterar Robô</a>
    </p>

    <h3>Robô</h3>

    @Html.DisplayFor(model => model.Robo.StatusRobo)
    @Html.DisplayFor(model => model.Robo.NmrSerie)

}

@if (Model.Regiao is null)
{
    <p>
        <a asp-controller="Regiao" asp-action="Create" asp-route-id="@Model?.IdRegiao">Cadastrar Região</a>
    </p>
}
else
{
    <p>
        <a asp-controller="Regiao" asp-action="Edit" asp-route-id="@Model?.IdRegiao">Alterar Região</a>
    </p>

    <h3>Região</h3>

    @Html.DisplayFor(model => model.Regiao.NomeRegiao)
    @Html.DisplayFor(model => model.Regiao.TempMedia)
    @Html.DisplayFor(model => model.Regiao.StatusRegiao)


}
