    ViewData["Title"] = "Details";
}

<h1>Temperatura</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTemperatura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTemperatura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataColeta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataColeta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfundTemperatura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfundTemperatura)
        </dd>
        <dt class="col-sm-2">
