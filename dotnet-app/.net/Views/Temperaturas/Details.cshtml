        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LatitudeTemp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LongitudeTemp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LongitudeTemp)
