</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdTemperatura">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


@if (Model.Regiao is null)
{
    <p>
        <a asp-controller="Regiao" asp-action="Criate" asp-route-id="@Model?.IdRegiao">Cadastrar Região</a>
    </p>
}
else
{
    <p>
        <a asp-controller="Regiao" asp-action="Edit" asp-route-id="@Model?.IdRegiao">Alterar Região</a>
    </p>

    <h3>Região</h3>

    @Html.DisplayFor(model => model.Regiao.NomeRegiao)
    @Html.DisplayFor(model => model.Regiao.TempMedia)
    @Html.DisplayFor(model => model.Regiao.StatusRegiao)
  
}
